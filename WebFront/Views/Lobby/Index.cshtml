
<style>
    body {
        background: url('https://ik.imagekit.io/idhgmnvrqc/lobby.jpg?updatedAt=1701105181378') center/cover;
    }
</style>


<div id="lobby-container">
    <div class="container" style="margin-top: 20%;">
        <h2 id="gameTitle">Welcome to Magic Chess Game</h2>
        <form id="formGame" asp-controller="Lobby" asp-action="InitializeGame" asp-antiforgery="true" method="post">
            <div class="row">
                <div class="col-md-12">
                    <input type="text" id="username-input" name="Username" placeholder="Enter your username">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-lg btn-outline-warning" id="play-button">Play Game</button>
                </div>
            </div>

        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        if ('@ViewBag.Msg' != '') {
            alert('@ViewBag.Msg');
        }
        // Handling click event for the play button
        $('#play-button').click(function () {
            // Get the username from the input field
            var username = $('#username-input').val();

            // Check if the username is not empty
            if (username.trim() !== '') {
                $("#formGame").submit();
            } else {
                alert('Please enter a valid username.');
            }
        });
    });
</script>
